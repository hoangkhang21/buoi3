<!DOCTYPE html>
<html>
	<head>
		<title>Bài 5</title>
		<meta charset="utf-8" />
	</head>
	<body>
		<div id="HienThi"></div>
		<Script>
			function ThoiGian()
			{
				var d = new Date();
				var gio = d.getHours();
				var phut = d.getMinutes();
				var giay = d.getSeconds();
				//document.write('Bây Giờ là '+gio+':'+phut+':'+giay);
				document.getElementsById('HienThi').innerHTML ='Bây Giờ là '+gio+':'+phut+':'+giay;
			}
			 setInterval(ThoiGian,1000);
		</Script>
	</body>
</html>